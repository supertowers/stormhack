<% content_for :navigation do %>
  <li class="active">
    <a href="/">Home</a>
  </li>

  <% if current_user %>
    <li class="dropdown navbar-profile">
    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
      <img src="<%= current_user.image %>" class="navbar-profile-avatar" alt="">
      <span class="navbar-profile-label"><%= current_user.name %> &nbsp;</span>
      <i class="fa fa-caret-down"></i>
    </a>

    <ul class="dropdown-menu" role="menu">

      <li>
      <a href="/user/profile">
        <i class="fa fa-user"></i>
        &nbsp;&nbsp;Perfil
      </a>
      </li>

      <li>
      <a href="/user/settings">
        <i class="fa fa-cogs"></i>
        &nbsp;&nbsp;Ajustes
      </a>
      </li>

      <li class="divider"></li>

      <li>
      <%= link_to destroy_user_session_path, :method =>:delete do %>
        <i class="fa fa-sign-out"></i>
        &nbsp;&nbsp;Salir
      <% end -%>
      </li>

    </ul>

    </li>
  <% else %>
    <li>
      <%= link_to user_omniauth_authorize_path(:facebook) do %>
        <i class="fa fa-facebook"></i>
        &nbsp;&nbsp; Login with Facebook
      <% end -%>
    </li>

  <% end %>
<% end %>

<% content_for :navigation_secondary do %>
  <% if current_user %>
    <li class="dropdown">
      <a href="/activity" class="dropdown-toggle" data-toggle="dropdown">
        <span class="label label-success row-stat-badge">+120</span>
      </a>

      <ul class="dropdown-menu noticebar-menu noticebar-hoverable" role="menu">
        <li class="nav-header">
        <div class="pull-left">
          Recompensas
        </div>

        <div class="pull-right">
          <a href="javascript:;">Marcar como vistas</a>
        </div>
        </li>

        <li>
        <a href="/activity" class="noticebar-item">
          <span class="noticebar-item-image">
            <i class="fa fa-ban text-danger"></i>
          </span>
          <span class="noticebar-item-body">
            <strong class="noticebar-item-title">Bug rechazado <span class="label label-danger">-30</span></strong>
            <span class="noticebar-item-text">Pablo Lopez ha rechazado tu SQL Injection</span>
            <span class="noticebar-item-time"><i class="fa fa-clock-o"></i> hace 12 minutos</span>
          </span>
        </a>
        </li>

        <li>
        <a href="/activity" class="noticebar-item">
          <span class="noticebar-item-image">
            <i class="fa fa-check-circle text-success"></i>
          </span>
          <span class="noticebar-item-body">
            <strong class="noticebar-item-title">Bug aceptado <span class="label label-success">+150</span></strong>
            <span class="noticebar-item-text">Has aceptado un XSS de Selene Pinillos</span>
            <span class="noticebar-item-time"><i class="fa fa-clock-o"></i> hace 20 minutos</span>
          </span>
        </a>
        </li>

        <li class="noticebar-menu-view-all">
        <a href="/activity">Ver toda la actividad</a>
        </li>
      </ul>
    </li>
  <% end %>
<% end %>
